<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="SERVICE_NAME">${spring:spring.application.name}</Property>

        <Property name="REGEX">${spring:vecr.cus-log.config.regex:-NA}</Property>
        <Property name="DEPTH">100</Property>
        <Property name="POLICY">${spring:vecr.cus-log.config.policy:-REPLACE}</Property>
        <Property name="MAX_LENGTH">${spring:vecr.cus-log.config.max-limit:-10240}</Property>
        <Property name="SKIP_LOGGERS">${spring:vecr.cus-log.config.skip-loggers}</Property>

        <Property name="CONSOLE_LOG_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSS} | ${SERVICE_NAME} [%-32.32X{RequestId}] [%-20.20thread] %-5level
            %-40.40logger{40} : %msg%n
        </Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${CONSOLE_LOG_PATTERN}"/>
            <Filters>
                <ThresholdFilter level="debug"/>
            </Filters>
        </Console>
        <Rewrite name="DesensitizeRewriter">
            <AppenderRef ref="Console"/>
            <DesensitizeRewritePolicy
                    regex="${REGEX}"
                    depth="${DEPTH}"
                    policy="${POLICY}"
                    maxLength="${MAX_LENGTH}"
                    skipLoggers="${SKIP_LOGGERS}"/>
        </Rewrite>
    </Appenders>

    <Loggers>
        <AsyncRoot level="info">
            <AppenderRef ref="DesensitizeRewriter"/>
        </AsyncRoot>
    </Loggers>
</Configuration>